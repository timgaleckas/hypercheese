  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'jquery-rails'
  gem 'react-rails'
  gem 'sprockets-coffee-react'
  gem 'font-awesome-rails'
  gem 'bootstrap-sass'
end

